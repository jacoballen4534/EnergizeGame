<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainMenuPane" maxHeight="900.0" maxWidth="1440.0" minHeight="768.0" minWidth="1024.0" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.mainMenuController">
   <children>
      <Canvas height="768.0" width="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <VBox fx:id="mainMenuVBox" alignment="CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="25">
         <children>
            <Label fx:id="mainMenuTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" text="Belda">
               <font>
                  <Font size="60.0" />
               </font>
            </Label>
            <Button fx:id="newGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#newGameButtonPressed" prefHeight="40.0" prefWidth="200.0" text="New Game" textAlignment="CENTER" />
            <Button fx:id="loadGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#loadGameButtonPressed" prefHeight="40.0" prefWidth="200.0" text="Load Game" textAlignment="CENTER" />
            <Button fx:id="highScoreButton" alignment="CENTER" mnemonicParsing="false" onAction="#highScoreButtonPressed" prefHeight="40.0" prefWidth="200.0" text="High Scores" textAlignment="CENTER" />
            <Button fx:id="OptionsButton" alignment="CENTER" mnemonicParsing="false" onAction="#optionsButtonPressed" prefHeight="40.0" prefWidth="200.0" text="Options" textAlignment="CENTER" />
            <Button fx:id="CreditsButton" alignment="CENTER" mnemonicParsing="false" onAction="#creditsButtonPressed" prefHeight="40.0" prefWidth="200.0" text="Credits" textAlignment="CENTER" />
            <Button fx:id="QuitButton" alignment="CENTER" mnemonicParsing="false" onAction="#quitButtonPressed" prefHeight="40.0" prefWidth="200.0" text="Quit" textAlignment="CENTER" />
         </children></VBox>
   </children>
</AnchorPane>
